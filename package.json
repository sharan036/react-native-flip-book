        "react-native-reanimated": "~3.17.1",
        "typescript": "^5.8.2"
    },
    "peerDependencies": {
        "expo-linear-gradient": "~11.3.0",
        "react": ">=16.8.0",
        "react-native": ">=0.6.0",
        "react-native-gesture-handler": "*",
