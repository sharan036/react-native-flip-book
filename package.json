        "expo-linear-gradient": "~14.0.2",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "metro-react-native-babel-preset": "^0.77.0",
        "prettier": "^3.5.3",
        "react": "19.0.0",
        "react-native": "0.78.1",
        "react-native-builder-bob": "^0.38.1",
        "react-native-gesture-handler": "~2.24.0",
